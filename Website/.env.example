# ── Server ───────────────────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ── Model ────────────────────────────────────────────────────────────────────
# Path to model.joblib — set this if it is not in the default location
# (default: ../model.joblib relative to the Website/ directory)
MODEL_PATH=../model.joblib

# ── CORS ─────────────────────────────────────────────────────────────────────
# Allow all origins during development. For production, restrict to your domain:
# CORS_ORIGINS=["https://yourdomain.com"]
CORS_ORIGINS=["*"]

# ── Cache ────────────────────────────────────────────────────────────────────
CACHE_ENABLED=true
CACHE_MAX_SIZE=512
